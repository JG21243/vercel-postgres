datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model legalprompt {
  id            Int      @id @default(autoincrement())
  name          String
  prompt        String
  category      String
  createdAt     DateTime @default(now())
  systemMessage String?  // Optional system message associated with the prompt
}